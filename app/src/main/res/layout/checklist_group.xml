<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="@dimen/gap_8dp"
              android:background="@color/pageColorLight"
              android:gravity="center_vertical"  >

        <TextView
            android:id="@+id/tv_header"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="?android:attr/expandableListPreferredItemPaddingLeft"
            android:layout_marginLeft ="?android:attr/expandableListPreferredItemPaddingLeft"
            android:textColor="@color/colorPrimary"
            android:contentDescription="@string/cd_checklist_type"
            android:textAppearance="?android:textAppearanceLarge"  />

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:id="@+id/iv_header"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:padding="@dimen/gap_8dp"
            android:background="@drawable/shape_cl_circle"
            android:contentDescription="@string/cd_checklist_icon"
            android:src="@drawable/ic_cl_me_24dp"
            android:tint="@color/pageColorLight"  />
</LinearLayout>
